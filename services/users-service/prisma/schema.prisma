enum UserRole {
  USER
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  name      String?
  email        String   @unique
  password     String
  role         UserRole  @default(USER)  // user | professional | clinic_admin | super_admin
  isActive     Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
